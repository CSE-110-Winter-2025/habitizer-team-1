<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Task Name TextView -->
        <TextView
            android:id="@+id/taskName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task Name"
            android:textSize="18sp" />

        <!-- Task Duration TextView -->

        <TextView
            android:id="@+id/taskDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[10 min]"
            android:textSize="16sp"/>
        <ImageButton
            android:id="@+id/move_up"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/move_up"
            app:srcCompat="@drawable/arrow_upward" />

        <ImageButton
            android:id="@+id/move_down"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/move_down"
            app:srcCompat="@drawable/arrow_downward" />
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>
